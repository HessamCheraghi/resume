---
import skillData from "../data/technicallSkills.json";
---

<section
  id="technicall-skills"
  class="mb-4 flex flex-col border-b border-stone-800 pb-4"
>
  <h2 class="mb-1 font-bold uppercase text-stone-500">Technicall Skills</h2>
  <div class="grid grid-cols-4 gap-2 text-stone-800">
    {
      skillData.map((s) => (
        <div class="">
          <h3 class="font-bold">{s.category}</h3>
          <ul class="flex flex-wrap gap-x-1 gap-y-0">
            {s.subCategory.map((sc, i, a) => (
              <li class="text-sm">{i < a.length - 1 ? `${sc},` : sc}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
