---
import Section from "./ui/Section.astro";

const education = [
  {
    schoolName: "Shiraz University",
    major: "Engineering Student",
    degree: "Bachelor Degree",
    duration: "September 2019 - July 2024",
  },
];
---

<Section title="education">
  <div class="flex flex-col gap-2">
    {
      education.map((e) => (
        <p class="flex gap-1">
          <span class="font-bold">{e.major},</span>
          <span class="italic">{e.schoolName}</span>
          <span class="">({e.degree})</span>
          <span class="ml-auto">{e.duration}</span>
        </p>
      ))
    }
  </div>
</Section>
