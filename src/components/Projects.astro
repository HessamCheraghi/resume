---
import projectData from "../data/projects.json";
---

<section id="open-source-projects" class="mb-4 flex flex-col pb-4">
  <h2 class="mb-1 font-bold uppercase text-stone-500">Open Source Projects</h2>

  <div class="flex flex-col gap-2">
    {
      projectData.map((p) => (
        <div class="flex flex-col gap-1">
          <p class="flex items-center gap-1">
            <span class="font-bold">{p.projectName}</span>
            <a href={p.link} target="_blank" rel="noopener noreferrer">
              <img
                src="/resume/icons/open-in-new-tab.svg"
                alt="open in new tab"
                class="size-2"
              />
            </a>
          </p>
          <p class="indent-2 text-sm">{p.description}</p>
        </div>
      ))
    }
  </div>
</section>
