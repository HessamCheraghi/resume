---
import Config from "../../astro.config.mjs";

const socialMedia = [
  {
    title: "Linkedin",
    link: "https://www.linkedin.com/in/hessam-cheraghi/",
    label: "linkedin.com/in/hessam-cheraghi",
    icon: `/${Config.base}/icons/logo-linkedin.svg`,
  },
  {
    title: "Github",
    link: "https://github.com/HessamCheraghi",
    label: "github.com/HessamCheraghi",
    icon: `/${Config.base}/icons/logo-github.svg`,
  },
  {
    title: "Email",
    link: "mailto:hessam.ch.rose@gmail.com",
    label: "hessam.ch.rose@gmail.com",
    icon: `/${Config.base}/icons/at-circle.svg`,
  },
  {
    title: "Phone Number",
    link: "tel:+98-917-494-4275",
    label: "0917 494 4275",
    icon: `/${Config.base}/icons/call.svg`,
  },
];
---

<section id="intro" class="flex flex-col gap-2 pb-2">
  <h1 class="font-serif text-xl font-bold tracking-wide">Hessam A. Cheraghi</h1>
  <p class="text-lg">Software Engineer</p>
  <ul class="grid grid-cols-2 gap-2">
    {
      socialMedia.map((social) => (
        <li class="flex items-center gap-1">
          <img src={social.icon} alt={social.title} class="size-4" />
          <a
            href={social.link}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 underline underline-offset-2"
          >
            {social.label}
          </a>
        </li>
      ))
    }
  </ul>
</section>
